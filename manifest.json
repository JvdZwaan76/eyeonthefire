{
  "name": "Eye on the Fire - Wildfire Tracking Platform",
  "short_name": "Eye on the Fire",
  "description": "America's premier real-time wildfire tracking platform. Monitor active fires, get evacuation alerts, and access expert safety guides.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#FFFFFF",
  "theme_color": "#FF4444",
  "orientation": "any",
  "scope": "/",
  "lang": "en-US",
  "categories": ["news", "utilities", "weather"],
  "shortcuts": [
    {
      "name": "Live Fire Map",
      "short_name": "Fire Map",
      "description": "View real-time wildfire tracking map",
      "url": "/#map",
      "icons": [
        {
          "src": "/images/icons/shortcut-map-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Safety Guide",
      "short_name": "Safety",
      "description": "Access wildfire safety information",
      "url": "/safety/",
      "icons": [
        {
          "src": "/images/icons/shortcut-safety-96x96.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Fire Prevention",
      "short_name": "Prevention",
      "description": "Learn fire prevention techniques",
      "url": "/prevention/",
      "icons": [
        {
          "src": "/images/icons/shortcut-prevention-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
